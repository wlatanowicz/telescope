{
    "require": {
        "php": ">=7.0",
        "symfony/symfony": "^3.0",
        "symfony/console": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Test\\" : "test/"}
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-web-dir": "web",
        "symfony-var-dir": "var"
    }
}
